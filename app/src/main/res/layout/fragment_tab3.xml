            tools:layout_editor_absoluteY="72dp"
            android:id="@+id/lvLista_id" />

        <EditText
            android:id="@+id/etTexto_id"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnAdicionar_id"
            android:layout_alignLeft="@+id/lvLista_id"
            android:layout_alignStart="@+id/lvLista_id"
            android:ems="10"
            android:inputType="textPersonName"
