<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageQuarto_id"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/img"/>

    <TextView
        android:id="@+id/tvQuarto_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageQuarto_id"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/imageQuarto_id"
        android:text="Quarto: " />

    <TextView
        android:id="@+id/tvHospede_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvQuarto_id"
        android:layout_below="@+id/tvQuarto_id"
        android:text="Hóspede:" />

    <TextView
        android:id="@+id/tvSituacao_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageQuarto_id"
        android:layout_alignEnd="@+id/tvHospede_id"
        android:text="Situação: " />


</RelativeLayout>